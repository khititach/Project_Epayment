<div class="container mb-5">
    <h1 class="card card-body text-center mt-5 mb-3">Store name : ร้านขายข้าวมันไก่</h1>
    <div class="card card-body">
        <span>Select Date</span>
        <input class="date mb-3" type="date" id="DatePiker" name="start">
        <h2>Account</h2>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Activity</th>
                    <th scope="col">Deposit</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < ResStoreHistory.length; i++ ) { %>
                    <tr>
                        <td><%= ResStoreHistory[i].date.getDate() + "/" + (ResStoreHistory[i].date.getMonth()+1) + "/" + ResStoreHistory[i].date.getFullYear() %></td>
                        <td><%= ResStoreHistory[i].date.getHours() + ":" + ResStoreHistory[i].date.getMinutes() + ":" + ResStoreHistory[i].date.getSeconds() %></td>
                        <td><%= ResStoreHistory[i].activity %></td>
                        <td><%= ResStoreHistory[i].deposit %> Baht</td>
                    </tr>
                <%}%>
            </tbody>
        </table>  

        <% if (pages > 0 ) {%>
            <div class="d-flex justify-content-center">
                <ul class="pagination">
                    <% if (current == 1 ) {%>
                        <li class="page-item disabled"><a class="page-link">&laquo;</a></li>
                    <%} else {%>
                        <li class="page-item"><a class="page-link" href="/student/history/income/1">First</a></li>
                    <%}%>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) {%>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <%}%>
                    <% for (; i <= (Number(current) + 4 ) && i <= pages; i++) {%>
                        <% if ( i == current ) {%>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <%} else {%>
                            <li class="page-item"><a class="page-link" href="/student/history/income/<%= i %>"><%= i %></a></li> 
                        <%}%> 
                        <% if ( i == Number(current) + 4 && i < pages) {%>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <%}%>
                    <%}%>
                    <% if (current == pages ) {%>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <%} else {%>
                        <li class="page-item"><a class="page-link" href="/student/history/income/<%= pages %>">&raquo;</a></li>
                    <%}%>
                </ul>
            </div>
        <%}%>
        <div class="container ">
            <a style="float: left;" href="/" class="btn btn-info" >PDF Download</a>
            <a style="float: right;" href="/" class="btn btn-primary" value="back">Back to Homepage</a>
        </div>

    </div>
</div>