<h2>FOOD</h2>
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Store NO.</th>
                <th scope="col">Food</th>
                <th scope="col">calories</th>
              </tr>
            </thead>
            <tbody>
                <tr>
                    <td>12/07/62</td>
                    <td>12:30</td>
                    <td>1</td>
                    <td>ข้าวมันไก่</td>
                    <td>350</td>
                  </tr>
                  <tr>
                      <td>12/07/62</td>
                      <td>12:45</td>
                      <td>5</td>
                      <td>coca-cola</td>
                      <td>50</td>
                    </tr>
            </tbody>
          </table>


          <% if (pages > 0) { %>     
            <div class="d-flex justify-content-center">
                <ul class="pagination">
                    <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">&laquo;</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/student/history/food/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item"><a class="page-link" href="/student/history/food/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/student/history/food/<%= pages %>">&raquo;</a></li>
                    <% } %>
                </ul>
            </div>
            <% } %>